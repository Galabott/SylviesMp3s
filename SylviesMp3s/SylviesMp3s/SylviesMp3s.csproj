<Project Sdk="Microsoft.NET.Sdk.WindowsDesktop">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0-windows</TargetFramework>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\albumCover.png" />
    <None Remove="Assets\next.png" />
    <None Remove="Assets\nextBlack.png" />
    <None Remove="Assets\pauseBlack.png" />
    <None Remove="Assets\previousBlack.png" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NAudio" Version="2.1.0" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Assets\albumCover.png" />
    <Resource Include="Assets\next.png" />
    <Resource Include="Assets\nextBlack.png" />
    <Resource Include="Assets\pauseBlack.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Assets\previousBlack.png" />
  </ItemGroup>

</Project>
